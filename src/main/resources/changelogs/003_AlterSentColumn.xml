        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="table.notifications.dropOldSent" author="Adrian Rudź">
        <dropColumn tableName="notifications" columnName="sent"/>
    </changeSet>

    <changeSet id="table.notifications.addNewSent" author="Adrian Rudź">
        <addColumn tableName="notifications">
            <column name="sent" type="boolean"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
